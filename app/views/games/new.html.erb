<h1>New Game</h1>
<div class="center">
  <% @letters.each do |letter| %>
  <button type="button" class="btn btn-primary"><%= letter %></button>
  <% end %>
</div>

<form class="form-inline" action="/score" method="post">
  <div class="form-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="ask">What's the longest word you can find: </label>
  <input type="text" name="word" class="form-control" id="ask" placeholder="Word">
  <%= hidden_field_tag 'grid', @letters %>
    <%= hidden_field_tag 'start_time', @start_time %>

  </div>
  <button type="submit" class="btn btn-primary">Play</button>
</form>
